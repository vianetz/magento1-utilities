<config>
    <tabs>
        <vianetz translate="label">
            <label>vianetz modules</label>
            <sort_order>200</sort_order>
        </vianetz>
    </tabs>
    <sections>
        <vianetz_utilities translate="label">
            <label>General Settings</label>
            <tab>vianetz</tab>
            <frontend_type>text</frontend_type>
            <sort_order>200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <cache_block translate="label">
                    <label>Cache: Block Cache Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>801</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <cache_navigation_lifetime translate="label comment">
                            <label>Cache lifetime navigation block</label>
                            <comment>
                                <![CDATA[Cache lifetime in seconds (time to live cache, "0" for deactivating the cache, "9999999999" for endless cache time)]]>
                            </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cache_navigation_lifetime>
                        <cache_product_list_lifetime translate="label comment">
                            <label>Cache lifetime product list block</label>
                            <comment>
                                <![CDATA[Cache lifetime in seconds (time to live cache, "0" for deactivating the cache, "9999999999" for endless cache time)]]>
                            </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cache_product_list_lifetime>
                    </fields>
                </cache_block>
                <admin_settings>
                    <label>Admin Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <disable_sid_in_urls>
                            <label>Disable SID in Admin Urls</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>This will disable appending the session id as query parameter SID for urls in Magento backend. This is e.g. required for Litespeed webserver to work correctly with uploads in backend.</comment>
                        </disable_sid_in_urls>
                    </fields>
                </admin_settings>
            </groups>
        </vianetz_utilities>
    </sections>
</config>